@model OnlineVaccineSystem.data.UserMaster

@{
    ViewBag.Title = "Forgot Password";
}

<h2>Forgot Password</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div id="loginbox" style="margin-top:50px; margin-left:450px" class="mainbox col-md-4 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Sign In</div>
                    <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Forgot password?</a></div>
                </div>

                <div style="padding-top:30px" class="panel-body">

                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                    <form id="loginform" class="form-horizontal" role="form">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control", @placeholder = " Enter Email Address" } })
                            @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })
                        </div>
                         

                        <div style="margin-top:10px" class="form-group">
                            <!-- Button -->

                            <div class="col-sm-12 controls">
                                @*<a id="btn-login" href="#" class="btn btn-success">Login  </a>
                                    <a id="btn-fblogin" href="#" class="btn btn-primary">Login with Facebook</a>*@
                                <input type="submit" value="Login" class="btn btn-primary" />
                            </div>
                        </div>



                    </form>



                </div>
            </div>
        </div>
        <div class="form-group" style="color:red;margin-left:100px">
            @ViewBag.error
            @Html.ValidationMessage("error")
        </div>
    </div>
     
}
<div>
    @Html.ActionLink("Login", "Login", "Login")
</div>

