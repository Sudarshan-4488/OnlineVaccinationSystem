@model IEnumerable<OnlineVaccineSystem.data.AppoimentMaster>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Appoiment List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table  table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CenterSlot.SlotTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserMaster.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vaccine.VaccineName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VaccineCenter.CenterName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CenterSlot.SlotTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserMaster.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vaccine.VaccineName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VaccineCenter.CenterName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
